<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.washingmachtest.MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="displays the background " />


    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/no_net"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/empty_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/mach1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="32dp"
            android:layout_toLeftOf="@id/empty_top"
            android:background="@drawable/magnitude_circle" />


        <TextView
            android:id="@+id/mach2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="32dp"
            android:layout_toRightOf="@id/empty_top"
            android:background="@drawable/magnitude_circle" />

        <TextView
            android:id="@+id/anchor_side1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />


        <TextView
            android:id="@+id/mach3"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_above="@id/anchor_side1"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="112dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/magnitude_circle" />

        <TextView
            android:id="@+id/mach4"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_above="@id/anchor_side1"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/magnitude_circle" />

        <TextView
            android:id="@+id/empty_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/mach5"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="32dp"
            android:layout_toLeftOf="@id/empty_bottom"
            android:background="@drawable/magnitude_circle" />

        <TextView
            android:id="@+id/mach6"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="32dp"
            android:layout_toRightOf="@id/empty_bottom"
            android:background="@drawable/magnitude_circle" />

        <TextView
            android:id="@+id/mach7"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_above="@id/anchor_side1"
            android:layout_alignParentRight="true"
            android:layout_margin="32dp"
            android:background="@drawable/magnitude_circle" />

        <TextView
            android:id="@+id/mach8"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="32dp"
            android:layout_toLeftOf="@id/empty_top"
            android:background="@drawable/magnitude_circle" />


    </RelativeLayout>
</RelativeLayout>

